@model IEnumerable<TARge21Shop.Models.Spaceship.SpaceshipIndexViewModel>

@{
	int rowNumber = 1;
}
<div class="h1">
	Products
</div>

<div>
	<a asp-action="add" asp-controller="spaceships" type="submit" class="btn">Add</a>
</div>

<form method="post">
	<table class="table-hover">
		<thead>
			<tr>
				<th scope="col">Nr</th>
				<th scope="col">Name</th>
				<th scope="col">Type</th>
				<th scope="col">Passengers</th>
				<th scope="col">Engine Power</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach(var spaceship in Model)
			{
				<tr>
					<td>@rowNumber</td>
					<td>@spaceship.Name</td>
					<td>@spaceship.Type</td>
					<td>@spaceship.Passangers</td>
					<td>@spaceship.Engine Power</td>
					<td>
						<td>
						<a asp-action="details" asp-controller="spaceships" asp-route-id="@spaceship.Id" class="btn btn-info">Details</a>
                        <a asp-action="edit" asp-controller="spaceships" asp-route-id="@spaceship.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="delete" asp-controller="spaceship" asp-route-id="@spaceship.Id" type="submit" class="btn btn-danger">Delete</a>
						</td>
					</td>
				</tr>
				rowNumber += 1;
			}
		</tbody>
	</table>
</form>